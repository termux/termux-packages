+  memset( &actions, 0, sizeof( actions ) );
+  sigemptyset( &actions.sa_mask );
+  actions.sa_flags = 0;
+  actions.sa_handler = thread_signal_handler;
+  sigaction( SIGUSR2, &actions, NULL );
+
+  void *(*start)(void *) = wrapped_start->start;
+  void *arg = wrapped_start->arg;
+
+  free( wrapped_start );
+
+  return (*start)( arg );
+}
