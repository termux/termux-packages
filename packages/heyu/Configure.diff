@@ -31,9 +31,9 @@
 
 # paths:
 cat >> Makefile <<EoF
-BIN = /usr/local/bin
-MAN = /usr/local/man/man1
-MAN5 = /usr/local/man/man5
+BIN = @TERMUX_PREFIX@/bin
+MAN = @TERMUX_PREFIX@/share/man/man1
