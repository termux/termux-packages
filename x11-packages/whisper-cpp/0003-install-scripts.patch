+        install(PROGRAMS ${script} DESTINATION ${CMAKE_INSTALL_BINDIR} RENAME "whisper-${script_name}")
+    endforeach()
+endif()
+
+if (IS_DIRECTORY "${CMAKE_CURRENT_SOURCE_DIR}/scripts")
+    file(GLOB UTILITY_SCRIPTS "${CMAKE_CURRENT_SOURCE_DIR}/scripts/*.sh")
+    install(PROGRAMS ${UTILITY_SCRIPTS} DESTINATION share/whisper-cpp)
+endif()
+
+file(GLOB PYTHON_SCRIPTS "${CMAKE_CURRENT_SOURCE_DIR}/models/*.py")
+foreach(script ${PYTHON_SCRIPTS})
