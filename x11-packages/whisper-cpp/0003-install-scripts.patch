+
+include(GNUInstallDirs)
+
+install(PROGRAMS "${CMAKE_CURRENT_SOURCE_DIR}/models/download-ggml-model.sh" DESTINATION ${CMAKE_INSTALL_BINDIR} RENAME whisper-download-model)
+
+file(GLOB MODEL_SCRIPTS "${CMAKE_CURRENT_SOURCE_DIR}/models/*.sh")
+foreach(script ${MODEL_SCRIPTS})
+    get_filename_component(script_name ${script} NAME)
