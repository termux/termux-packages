+        /* Termux gnome-session: Start dbus-daemon --system first before anything */
+        {
+            const char *pid_file = "@TERMUX_PREFIX@/var/run/dbus/pid";
+            FILE *f = fopen (pid_file, "r");
+            if (f) {
+                int pid = 0;
+                if (fscanf (f, "%d", &pid) == 1 && pid > 0) {
+                     g_message ("Termux gnome-session: Killing stale system dbus-daemon (pid %d)", pid);
+                     kill (pid, SIGTERM);
+                }
+                fclose (f);
+            }
+            remove (pid_file);
+            g_message ("Termux gnome-session: starting system dbus-daemon...");
+            system ("dbus-daemon --system --fork");
+        }
